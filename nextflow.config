profiles {
    standard {
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=6
                container="ghcr.io/bwbioinfo/dorado-docker-cwl:latest"
                containerOptions = "--gpus all"
            }
            withLabel:pod5 {
                cpus=17
                container="chrisamiller/pod5-tools:0.2.4"
            }
            withLabel:minimap {
                cpus=42
                container="ghcr.io/bwbioinfo/minimap2-docker-cwl:latest"
            }
            withName:nanoplot {
                cpus=10
                container="nanozoo/nanoplot:1.42.0--547049c"
            }
            withLabel:sam_big {
                cpus=20
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withLabel:sam_sm {
                cpus=4
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withName:mosdepth {
                cpus=20
                container="quay.io/biocontainers/mosdepth:0.3.3--h37c5b7d_2"
            }
            withName:multiqc {
                container="staphb/multiqc:latest"
            }
        }
        params {
            out_dir = "${projectDir}/output"
            skip_basecall=false
            skip_mapping=false
            fastq=null
            dorado_cpu=false
            pod5=null
            simplex=false
            no_mod=false
            sample_id="reads"
            ref = null
            model="sup"
            m_bases="5mCG_5hmCG"
            model_path=null
            m_bases_path=null
            help = false
            b=null
            threads = 40
        }
    }

    test {
        workDir="./results/work"
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=4
                container="ghcr.io/bwbioinfo/dorado-docker-cwl:latest"
            }
            withLabel:pod5 {
                container="chrisamiller/pod5-tools:0.2.4"
            }
            withName:nanoplot {
                cpus=2
                container="nanozoo/nanoplot:1.42.0--547049c"
            }
            withLabel:minimap {
                cpus=2
                container="ghcr.io/bwbioinfo/minimap2-docker-cwl:latest"
            }
            withLabel:'sam_big|sam_sm' {
                cpus=2
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withName:mosdepth {
                cpus=4
                container="quay.io/biocontainers/mosdepth:0.3.3--h37c5b7d_2"
            }
            withName:multiqc {
                container="staphb/multiqc:latest"
            }
        }
        params {
            out_dir="./results"
            git=true
            skip_basecall=false
            skip_mapping=false
            dorado_cpu=true
            simplex=false
            pod5=null
            fastq=null
            no_mod=false
            sample_id="reads"
            ref=null
            model="sup"
            m_bases="5mCG_5hmCG"
            model_path=null
            m_bases_path=null
            help=false
            b=10
            threads = 3
        }
    }
    drac {
        process {
            executor = 'slurm'
            withLabel:dorado {
                containerOptions = "--nv" 
                clusterOptions = "--gpus-per-node=4 --cpus-per-task=12 --mem 100G --time=2-06:00:00"
                container="ghcr.io/bwbioinfo/dorado-docker-cwl:latest"
            }
            withLabel:pod5 {
                clusterOptions = "--cpus-per-task=40 --mem 50G --time=24:00:00"
                container="chrisamiller/pod5-tools:0.2.4"
            }
            withName:nanoplot {
                clusterOptions = "--cpus-per-task=10 --mem 5G --time=4:00:00"
                container="nanozoo/nanoplot:1.42.0--547049c"
            }
            withLabel:minimap {
                clusterOptions = "--cpus-per-task=42 --mem 35G --time=24:00:00"
                container="ghcr.io/bwbioinfo/minimap2-docker-cwl:latest"
            }
            withLabel:sam_big {
                clusterOptions = "--cpus-per-task=30 --mem 40G --time=24:00:00"
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withLabel:sam_sm {
                clusterOptions = "--cpus-per-task=10 --mem 10G --time=4:00:00"
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withName:mosdepth {
                clusterOptions = "--cpus-per-task=30 --mem 20G --time=8:00:00"
                container="quay.io/biocontainers/mosdepth:0.3.3--h37c5b7d_2"
            }
            withName:multiqc {
                clusterOptions = "--cpus-per-task=6 --mem 10G --time=3:00:00"
                container="staphb/multiqc:latest"
            }
        }
        params {
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            fastq=null
            pod5=null
            simplex=false
            no_mod=false
            sample_id="reads"
            ref=null
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0_5mCG_5hmCG@v1"
            model=null
            m_bases=null
            help=false
            b=null
            threads = 40
        }
        apptainer {
            enabled=true
            autoMounts=true
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
    test_drac {
        process {
            executor = 'slurm'
            withLabel:dorado {
                containerOptions = "--nv"
                clusterOptions = "--gpus-per-node=1 --cpus-per-task=6 --mem 20G --time=2-06:00:00"
                container="ghcr.io/bwbioinfo/dorado-docker-cwl:latest"
            }
            withLabel:pod5 {
                clusterOptions = "--cpus-per-task=4 --mem 5G --time=3:00:00"
                container="chrisamiller/pod5-tools:0.2.4"
            }
            withName:nanoplot {
                clusterOptions = "--cpus-per-task=4 --mem 2G --time=2:00:00"
                container="nanozoo/nanoplot:1.42.0--547049c"
            }
            withLabel:minimap {
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
                container="ghcr.io/bwbioinfo/minimap2-docker-cwl:latest"
            }
            withLabel:'sam_big|sam_sm' {
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
                container="ghcr.io/bwbioinfo/samtools-docker-cwl:latest"
            }
            withName:multiqc {
                clusterOptions = "--cpus-per-task=2 --mem 1G --time=3:00:00"
                container="staphb/multiqc:latest"
            }
            withName:mosdepth {
                clusterOptions = "--cpus-per-task=10 --mem 10G --time=4:00:00"
                container="quay.io/biocontainers/mosdepth:0.3.3--h37c5b7d_2"
            }
        }
        params {
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            fastq=null
            pod5=null
            simplex=false
            no_mod=false
            sample_id="reads"
            ref=null
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0_5mCG_5hmCG@v2"
            model=null
            m_bases=null
            help=false
            b=null
            threads=12
        }
        apptainer {
            enabled=true
            autoMounts=true
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
}
