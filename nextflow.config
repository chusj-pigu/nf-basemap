profiles {
    standard {
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=6
                containerOptions = "--gpus all"
            }
            withLabel:pod5 {
                cpus=17
            }
            withLabel:minimap {
                cpus=42
            }
            withName:nanoplot {
                cpus=10
            }
            withLabel:sam_big {
                cpus=20
            }
            withLabel:'sam_sm|sam_long' {
                cpus=4
            }
            withName:mosdepth {
                cpus=2
            }
        }
        params {
            out_dir = "${projectDir}/output"
            skip_basecall=false
            skip_mapping=false
            fastq=null
            dorado_cpu=false
            pod5=null
            duplex=false
            no_mod=false
            sample_id="reads"
            ref = null
            minqs=10
            model="sup"
            m_bases="5mC_5hmC"
            model_path=null
            m_bases_path=null
            bed=null
            help = false
            batch=null
            threads = 40
        }
    }

    test {
        workDir="./results/work"
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=4
            }
            withName:nanoplot {
                cpus=2
            }
            withLabel:minimap {
                cpus=2
            }
            withLabel:'sam_big|sam_sm|sam_long' {
                cpus=2
            }
            withName:mosdepth {
                cpus=2
            }
        }
        params {
            out_dir="./results"
            git=true
            skip_basecall=false
            skip_mapping=false
            dorado_cpu=true
            duplex=false
            pod5=null
            fastq=null
            no_mod=false
            sample_id="reads"
            ref=null
            minqs=10
            model="sup"
            m_bases="5mCG_5hmCG"
            model_path=null
            m_bases_path=null
            bed=null
            help=false
            batch=10
            threads = 3
        }
    }
    drac {
        process {
            executor = 'slurm'
            withLabel:dorado {
                containerOptions = "--nv" 
                clusterOptions = "--gpus-per-node=4 --cpus-per-task=12 --mem 100G --time=3-00:00:00"
            }
            withName:pod5_channel {
                clusterOptions = "--cpus-per-task=4 --mem 4G --time=2:00:00"
            }
            withName:subset {
                clusterOptions = "--cpus-per-task=40 --mem 50G --time=24:00:00"
            }
            withName:nanoplot {
                clusterOptions = "--cpus-per-task=10 --mem 20G --time=4:00:00"
            }
            withLabel:minimap {
                clusterOptions = "--cpus-per-task=42 --mem 35G --time=24:00:00"
            }
            withLabel:sam_big {
                clusterOptions = "--cpus-per-task=30 --mem 40G --time=24:00:00"
            }
            withLabel:sam_long {
                clusterOptions = "--cpus-per-task=5 --mem 5G --time=24:00:00"
            }
            withLabel:sam_sm {
                clusterOptions = "--cpus-per-task=10 --mem 10G --time=4:00:00"
            }
            withName:mosdepth {
                clusterOptions = "--cpus-per-task=10 --mem 20G --time=3:00:00"
            }
            withName:multiqc {
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
        }
        params {
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            fastq=null
            pod5=null
            duplex=false
            no_mod=false
            sample_id="reads"
            ref=null
            minqs=10
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0_5mC_5hmC@v1"
            model=null
            m_bases=null
            help=false
            bed=null
            batch=null
            threads = 40
        }
        apptainer {
            enabled=true
            autoMounts=true
            runOptions = "-B /project/ctb-noncodo/Platform/references/dorado_models,/project/ctb-noncodo/Platform/references/genomes,/project/ctb-noncodo/Platform/references/gene_panels"
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
    test_drac {
        process {
            executor = 'slurm'
            withLabel:dorado {
                container = "ontresearch/dorado:shaa5cd803bdb5f3cac5c612e47ea6391b882861b8b"
                containerOptions = "--nv"
                clusterOptions = "--gpus-per-node=1 --cpus-per-task=6 --mem 20G --time=2-06:00:00"
            }
            withLabel:pod5 {
                clusterOptions = "--cpus-per-task=4 --mem 5G --time=3:00:00"
            }
            withName:nanoplot {
                clusterOptions = "--cpus-per-task=4 --mem 2G --time=2:00:00"
            }
            withLabel:minimap {
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
            }
            withLabel:'sam_big|sam_sm|sam_long' {
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
            }
            withName:multiqc {
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
            withName:mosdepth {
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
        }
        params {
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            fastq=null
            pod5=null
            duplex=false
            no_mod=false
            sample_id="reads"
            ref=null
            minqs=9
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0_5mCG_5hmCG@v2"
            model=null
            m_bases=null
            help=false
            bed=null
            batch=null
            threads=12
        }
        apptainer {
            enabled=true
            autoMounts=true
            runOptions = "-B /project/ctb-noncodo/Platform/references/dorado_models,/project/ctb-noncodo/Platform/references/genomes"
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
}
