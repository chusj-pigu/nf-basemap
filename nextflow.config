profiles {
    standard {
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=6
                containerOptions = "--gpus all"
            }
            withLabel:pod5 {
                cpus=17
            }
            withLabel:minimap {
                cpus=42
            }
            withName:nanoplot {
                cpus=10
            }
            withLabel:sam_big {
                cpus=20
            }
            withLabel:'sam_sm|sam_long' {
                cpus=4
            }
            withName:mosdepth {
                cpus=2
            }
        }
        params {
            sample_sheet=null
            out_dir = "${projectDir}/output"
            skip_basecall=false
            skip_mapping=false
            dorado_cpu=false
            duplex=false
            no_mod=false
            resume=false
            ubam=null
            sample_id="reads"
            ref="${projectDir}/assets/NO_REF"
            minqs=10
            model="sup"
            m_bases="5mC_5hmC"
            model_path=null
            m_bases_path=null
            bed="${projectDir}/assets/NO_BED"
            help = false
            batch=null
            threads = 40
            publish=true
        }
    }

    test {
        workDir="./results/work"
        docker.enabled=true
        process {
            withLabel:dorado {
                cpus=4
            }
            withName:nanoplot {
                cpus=2
            }
            withLabel:minimap {
                cpus=2
            }
            withLabel:'sam_big|sam_sm|sam_long' {
                cpus=2
            }
            withName:mosdepth {
                cpus=2
            }
        }
        params {
            sample_sheet=null
            out_dir="./results"
            git=true
            skip_basecall=false
            skip_mapping=false
            dorado_cpu=true
            duplex=false
            no_mod=true
            resume=false
            ubam=null
            ref="${projectDir}/assets/NO_REF"
            minqs=10
            model=null
            m_bases=null
            model_path="${projectDir}/test/dna_r10.4.1_e8.2_400bps_hac@v4.1.0"
            m_bases_path=null
            bed="${projectDir}/assets/NO_BED"
            help=false
            batch=10
            threads = 3
            publish=false
        }
    }
    drac {
        process {
            array = 10
            withLabel:dorado {
                executor = 'slurm'
                containerOptions = "--nv" 
                clusterOptions = "--gpus-per-node=4 --cpus-per-task=12 --mem 100G --time=1-12:00:00"
            }
            withName:pod5_channel {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=4 --mem 4G --time=2:00:00"
            }
            withName:subset {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=40 --mem 50G --time=24:00:00"
            }
            withName:nanoplot {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=10 --mem-per-cpu 10G --time=4:00:00"
            }
            withLabel:minimap {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=42 --mem 35G --time=24:00:00"
            }
            withLabel:sam_big {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=30 --mem 40G --time=24:00:00"
            }
            withLabel:sam_long {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=5 --mem 5G --time=24:00:00"
            }
            withLabel:sam_sm {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=10 --mem 10G --time=4:00:00"
            }
            withName:mosdepth {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=10 --mem 20G --time=3:00:00"
            }
            withName:multiqc {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
        }
        params {
            sample_sheet=null
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            duplex=false
            no_mod=false
            resume=false
            ubam=null
            ref="${projectDir}/assets/NO_REF"
            minqs=10
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_sup@v5.0.0_5mC_5hmC@v1"
            model=null
            m_bases=null
            help=false
            bed="${projectDir}/assets/NO_BED"
            batch=null
            threads = 40
        }
        apptainer {
            enabled=true
            autoMounts=true
            runOptions = "-B /project/ctb-noncodo/Platform/references"
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
    test_drac {
        array = 2
        process {
            withLabel:dorado {
                executor = 'slurm'
                container = "ontresearch/dorado:shaa5cd803bdb5f3cac5c612e47ea6391b882861b8b"
                containerOptions = "--nv"
                clusterOptions = "--gpus-per-node=1 --cpus-per-task=6 --mem 20G --time=6:00:00"
            }
            withLabel:pod5 {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=4 --mem 5G --time=3:00:00"
            }
            withName:nanoplot {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=4 --mem 2G --time=2:00:00"
            }
            withLabel:minimap {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
            }
            withLabel:'sam_big|sam_sm|sam_long' {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=12 --mem 12G --time=3:00:00"
            }
            withName:multiqc {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
            withName:mosdepth {
                executor = 'slurm'
                clusterOptions = "--cpus-per-task=1 --mem 1G --time=1:00:00"
            }
        }
        params {
            out_dir="${projectDir}/output"
            dorado_cpu=false
            skip_basecall=false
            skip_mapping=false
            duplex=false
            no_mod=true
            resume=false
            ubam=null
            ref="${projectDir}/test/ref.fasta"
            sample_sheet="${projectDir}/test/samplesheet.csv"
            minqs=9
            model_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0"
            m_bases_path="/project/ctb-noncodo/Platform/references/dorado_models/dna_r10.4.1_e8.2_400bps_hac@v4.1.0_5mCG_5hmCG@v2"
            model=null
            m_bases=null
            help=false
            bed="${projectDir}/assets/NO_BED"
            batch=null
            threads=12
            publish=true
        }
        apptainer {
            enabled=true
            autoMounts=true
            runOptions = "-B /project/ctb-noncodo/Platform/references"
            libraryDir = "/project/ctb-noncodo/Platform/references/apptainer/images"
            cacheDir = "/project/ctb-noncodo/Platform/references/apptainer/cache"
        }
    }
}
